<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.benjamimgois.serialcom</id>

  <name>SerialCom</name>
  <summary>Modern graphical interface for serial communication via picocom</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <developer id="io.github.benjamimgois">
    <name>Benjamim Gois</name>
  </developer>

  <description>
    <p>
      SerialCom is a modern and elegant graphical interface for serial communication.
      It provides an intuitive way to configure and establish serial connections using picocom as the backend.
    </p>
    <p>Features:</p>
    <ul>
      <li>Modern graphical interface with PyQt6</li>
      <li>Automatic serial port detection</li>
      <li>Support for serial ports (/dev/ttyS*) and USB adapters (/dev/ttyUSB*)</li>
      <li>Complete serial parameter configuration (baud rate, data bits, parity, stop bits, flow control)</li>
      <li>Baud rates from 300 to 921600 bps</li>
      <li>Opens connection in system default terminal</li>
    </ul>
  </description>

  <launchable type="desktop-id">io.github.benjamimgois.serialcom.desktop</launchable>

  <branding>
    <color type="primary" scheme_preference="light">#3584e4</color>
    <color type="primary" scheme_preference="dark">#1a5fb4</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <caption>SerialCom main window</caption>
      <image>https://raw.githubusercontent.com/benjamimgois/serialcom/main/assets/screenshots/screenshot.jpeg</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/benjamimgois/serialcom</url>
  <url type="bugtracker">https://github.com/benjamimgois/serialcom/issues</url>
  <url type="vcs-browser">https://github.com/benjamimgois/serialcom</url>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="1.1" date="2026-01-30">
      <description>
        <p>Add Flatpak support</p>
        <ul>
          <li>Add Flatpak/Flathub manifest</li>
          <li>Add AppStream metadata</li>
          <li>Fix icon installation paths</li>
        </ul>
      </description>
    </release>
    <release version="1.0" date="2026-01-30">
      <description>
        <p>Initial stable release</p>
        <ul>
          <li>Modern PyQt6 graphical interface</li>
          <li>Automatic port detection with QSerialPortInfo</li>
          <li>Full serial parameter configuration</li>
          <li>Support for multiple terminal emulators</li>
        </ul>
      </description>
    </release>
  </releases>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
</component>
